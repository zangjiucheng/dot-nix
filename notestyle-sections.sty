\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{notestyle-sections}[2025/11/06 v1.2 Section-as-chapter headings]

\RequirePackage{titlesec}
\RequirePackage{xcolor}

% numbering
\renewcommand*{\thesection}{{\arabic{section}}}
\renewcommand*{\thesubsection}{\thesection.\arabic{subsection}}
\renewcommand*{\thesubsubsection}{\thesubsection.\arabic{subsubsection}}

% knobs
\newcommand*\nsChapterLabel{CHAPTER}
\newcommand*\nsRuleThickness{0.5pt}
\newcommand*\nsChapterFont{\sffamily\LARGE}
\newcommand*\nsTitleFont{\sffamily\bfseries\LARGE}

% safe horizontal rule (no \titlerule)
\newcommand*\nsHrule{%
    \par\noindent\rule{\linewidth}{\nsRuleThickness}\par%
}

% main style
\titleformat{\section}[display]
{\nsChapterFont}%
{   
    \clearpage
    \thispagestyle{empty}%
    \vspace*{2ex}%
    \hfill\nsChapterLabel~\thesection}%
{1ex}%
{%
    \nsHrule%
    \raggedleft\nsTitleFont%
}%
[\vspace{-1ex}\nsHrule]%

\titlespacing*{\section}{0pt}{*6}{*4}

